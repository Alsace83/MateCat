<div class="error-selection-modal" >
  <button data-remodal-action="close" class="remodal-close"></button>
  <h2>Error selection</h2>
  <div>You have selected this piece of text: <strong> {{selected_string}}</strong></div>

  <h3>Select the issue type</h3>
  <form id="error-selection-form" action="#" method="POST">
    <table>
      <tr>
        <th>Error Type </th>
        <th>Severity </th>
      </tr>

      {{#each lqa_model.categories as |category| }}
        {{> review_improved/_error_selection_checkboxes category="category" }}
        {{#each category.subcategories as |category| }}
          {{> review_improved/_error_selection_checkboxes category="category" }}
        {{/each}}
      {{/each}}
    </table>

    <div class="error-message-container">
      <h3>Type an optional comment here</h3>

      <textarea name="comment"></textarea>
      <input type="hidden" name="start_offset" value="{{start_offset}}" />
      <input type="hidden" name="end_offset" value="{{end_offset}}" />
      <input type="submit" id="error-selection-button" />


    </div>
  </form>

</div>
